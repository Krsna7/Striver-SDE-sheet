class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        // int row0 = 0, col0 = 0;
        // int row = matrix.size(), col = matrix[0].size();
        // for(int i = 0; i < row; i++){
        //     for(int j = 0; j < col; j++){
        //         if(matrix[i][j] == 0){
        //             if(i == 0) row0 = 1;
        //             if(j == 0) col0 = 1;
        //             matrix[i][0] = matrix[0][j] = 0;
        //         }
        //     }
        // }
        // for(int i = 1; i < row; i++){
        //     for(int j = 1; j < col; j++){
        //         if(matrix[i][0] == 0 || matrix[0][j] == 0) matrix[i][j] = 0;
        //     }
        // }
        // if(col0){
        //     for(int i = 0; i < row; i++) matrix[i][0] = 0;
        // }
        // if(row0){
        //     for(int j = 0; j< col; j++) matrix[0][j] = 0;
        // }
        int r = matrix.size();
        int c = matrix[0].size();
        int col0 = 0, row0 = 0;
        for(int i = 0; i < r; i++) {
            for(int j = 0; j < c; j++){
                if(matrix[i][j]==0) {
                    matrix[0][j]= 0;
                    matrix[i][0] = 0;
                    if(j == 0) col0 = 1;
                    if(i == 0) row0 = 1;
                }
            }
        }

        for(int i=1; i<r; i++) {
            for(int j=1; j<c; j++) {
                if(matrix[0][j]==0 || matrix[i][0]==0){
                    matrix[i][j] = 0;
                }
            }
        }
        if(col0){
            for(int i=0; i<r; i++) {
                matrix[i][0] = 0;
            }
        }
        if(row0){
            for(int i=0; i<c; i++) {
                matrix[0][i] = 0;
            }
        }

    }
};
